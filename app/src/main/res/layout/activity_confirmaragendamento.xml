<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Azul"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:fontFamily="@font/holyfat"
                    android:text="Evento"
                    android:id="@+id/evento"
                    android:textColor="#ECF0F1"
                    android:textSize="80sp"
                    android:background="@color/Azul"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:textStyle="bold|italic" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="50dp"
                    android:paddingRight="10dp"
                    android:id="@+id/LinearLayout123">


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Pet: "
                            android:id="@+id/textView69"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/branco" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=""
                            android:id="@+id/pet"
                            android:textSize="25sp"
                            android:layout_alignBottom="@+id/textView69"
                            android:layout_toRightOf="@+id/textView69"
                            android:layout_toEndOf="@+id/textView69"
                            android:textColor="#333333" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Dia: "
                            android:id="@+id/textView23"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/branco" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=""
                            android:id="@+id/dia"
                            android:textSize="25sp"
                            android:layout_alignBottom="@+id/textView23"
                            android:layout_toRightOf="@+id/textView23"
                            android:layout_toEndOf="@+id/textView23"
                            android:textColor="#333333" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Horario: "
                            android:id="@+id/textView37"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/branco" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=""
                            android:id="@+id/horario"
                            android:textSize="25sp"
                            android:layout_alignBottom="@+id/textView37"
                            android:layout_toRightOf="@+id/textView37"
                            android:layout_toEndOf="@+id/textView37"
                            android:textColor="#333333" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Local: "
                            android:id="@+id/textView36"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/branco" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=""
                            android:id="@+id/nome_estabelecimento"
                            android:textSize="25sp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/textView36"
                            android:layout_toEndOf="@+id/textView36"
                            android:textColor="#333333" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Endereço: "
                            android:id="@+id/textView3"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/branco" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=""
                            android:id="@+id/endereco"
                            android:textSize="25sp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/textView3"
                            android:layout_toEndOf="@+id/textView3"
                            android:textColor="#333333" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Observação: "
                        android:id="@+id/textView610"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/branco" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:id="@+id/observacao"
                        android:textSize="25sp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3"
                        android:textColor="#333333" />



                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="ID_horario: "
                            android:id="@+id/textView6100"
                            android:textSize="25sp"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:textColor="@color/branco" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=""
                            android:id="@+id/id_horario"
                            android:textSize="25sp"
                            android:visibility="gone"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/textView6100"
                            android:layout_toEndOf="@+id/textView6100"
                            android:textColor="#333333" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="ID_estabelecimento: "
                            android:id="@+id/textView61002"
                            android:textSize="25sp"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:textColor="@color/branco" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=""
                            android:id="@+id/id_estabelecimento"
                            android:textSize="25sp"
                            android:visibility="gone"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/textView61002"
                            android:layout_toEndOf="@+id/textView61002"
                            android:textColor="#333333" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="ID_pet: "
                            android:visibility="gone"
                            android:id="@+id/textView61003"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/branco" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text=""
                            android:id="@+id/id_pet"
                            android:visibility="gone"
                            android:textSize="25sp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/textView61003"
                            android:layout_toEndOf="@+id/textView61003"
                            android:textColor="#333333" />

                    </RelativeLayout>





                </LinearLayout>
            </LinearLayout>


            <Button
                android:layout_width="197dp"
                android:layout_height="60dp"
                android:id="@+id/confirmar"
                android:backgroundTint="@color/rosa"
                android:background="@drawable/shapesignup"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/branco"
                android:text="Confirmar Agendamento"
                />


        </LinearLayout>
    </ScrollView>

</LinearLayout>