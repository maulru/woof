<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/rosa"
              android:orientation="vertical"
              android:padding="10dp"
>

    <ImageView
            android:id="@+id/TipoServico"
            android:layout_width="113dp"
            android:src="@drawable/agendaconsulta"
            android:layout_height="125dp"
            android:text="Banho"
            android:layout_marginLeft="140dp"/>


    <EditText
            android:id="@+id/NomeEstabelecimento"
            android:layout_width="250dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="65dp"
            android:layout_height="wrap_content"
            android:textColor="@color/branco"
            android:background="@drawable/shapeemail"
            android:hint="Nome do Estabelecimento"
            android:textColorHint="@color/branco"/>

    <EditText
            android:id="@+id/Endereco"
            android:layout_width="250dp"
            android:textColor="@color/branco"
            android:background="@drawable/shapeemail"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="65dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/branco"
            android:hint="Av Rudge,365" />

    <EditText
            android:id="@+id/observacao"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:ems="10"
            android:hint="Adicionar Observação"
            android:textColorHint="@color/branco"
            android:textColor="@color/branco"
            android:inputType="textMultiLine"
            android:backgroundTint="@color/branco"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:text="Escolha Uma Data"
            android:textSize="12dp"
            android:textColor="@color/branco"
            android:layout_marginLeft="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/textView9"/>


    <Button
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:id="@+id/show_dialog"
            android:layout_marginLeft="180dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/ic_calendar_icon"/>




    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_text"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/show_dialog"
            android:textColor="#000"
            android:textSize="15sp"/>




    <Spinner
            android:id="@+id/spinnerHorario"
            android:background="@drawable/shapeemail"
            android:layout_width="350dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"

    >
    </Spinner>
    <TextView
            android:text="Escolha Seu Pet"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/branco"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"/>

    <Spinner
            android:id="@+id/spinnerPet"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shapeemail"
            android:layout_width="350dp"
            android:layout_height="30dp"

    >
    </Spinner>



    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="300dp"
            android:id="@+id/Enviar"
            android:background="@color/branco"
            android:textColor="@color/rosa"
            android:text="Validar"

    />

</LinearLayout>