<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="77dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="false"
            android:baselineAligned="false"
            android:cropToPadding="false"
            android:src="@drawable/doguinho" />


        <Button
            android:id="@+id/btnConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#df7373"
            android:text="Agendar uma consulta"
            android:textColor="#ffffff"
            android:textSize="30sp" />


        <Button
            android:id="@+id/btnBanho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#df7373"
            android:text="Banho e tosa"
            android:textColor="#ffffff"
            android:textSize="30sp" />




        <Button
            android:id="@+id/btnItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#df7373"
            android:text="Compre Itens"
            android:textColor="#ffffff"
            android:textSize="30sp" />


        <Button
            android:id="@+id/btnHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#df7373"
            android:text="Historico de ServiÃ§os"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#df7373"
            android:text="Chat"
            android:textColor="#ffffff"
            android:textSize="30sp" />




    </LinearLayout>
</ScrollView>




