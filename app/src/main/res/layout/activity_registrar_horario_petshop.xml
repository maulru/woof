<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/rosa"
    android:padding="10dp"
    >

    <TextView
        android:text="Registrar Horario"
        android:textColor="@color/branco"
        android:layout_width="wrap_content"
        android:fontFamily="@font/holyfat"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"/>


    <EditText

        android:layout_width="176dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:hint="DD/MM/AAAA"
        android:inputType="numberDecimal"
        android:id="@+id/editHorarioData_petshop"
        android:textColorHint="@color/branco"
        android:paddingLeft="40dp"
        android:background="@drawable/shapeemail"/>

    <TextView
        android:text="OU"
        android:textColor="@color/branco"
        android:layout_gravity="center_horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_calendarioicone"
        android:id="@+id/date_dia_petshop"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--
     <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="  Selecionar Data"
             android:layout_marginTop="20dp"
             android:id="@+id/show_dialog"
             android:drawablePadding="10dp"
             android:textColor="@color/branco"
             android:layout_gravity="center_horizontal"
             android:background="@drawable/shapelogin"
             android:backgroundTint="@color/profilePrimaryDark"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
     />
 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_text_petshop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_toRightOf="@id/show_dialog"
        android:textColor="#FFF"
        android:textSize="24sp"/>

    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText

            android:layout_width="70dp"
            android:layout_height="43dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:hint="HORA"
            android:inputType="numberDecimal"
            android:id="@+id/editHoraRegistra_petshop"
            android:textColorHint="@color/branco"
            android:background="@drawable/shapeemail"/>

        <EditText

            android:layout_width="70dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:hint="MIN"
            android:inputType="numberDecimal"
            android:id="@+id/editMinutoRegistra_petshop"
            android:textColorHint="@color/branco"
            android:background="@drawable/shapeemail"/>



    </LinearLayout>

    <TextView
        android:id="@+id/textView1_petshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:text="Escolha o tipo de serviÃ§o" />

    <Spinner
        android:id="@+id/spinner_tipo_petshop"
        android:background="@drawable/shapeemail"
        android:layout_width="350dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrar_horario_petshop"
        android:text="Cadastrar Horario"
        android:backgroundTint="@color/profilePrimaryDark"
        android:onClick="registrar_horario"
        android:textColor="@color/branco"
        android:background="@drawable/shapelogin"
        android:layout_marginLeft="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />



</LinearLayout>