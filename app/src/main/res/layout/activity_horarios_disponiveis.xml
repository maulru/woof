<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/rosa"
    android:padding="10dp"
    >

    <TextView
        android:text="Horario Disponiveis"
        android:textColor="@color/branco"
        android:layout_width="wrap_content"
        android:fontFamily="@font/holyfat"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="82dp"
        android:orientation="horizontal">

        <EditText

            android:id="@+id/dia"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shapeemail"
            android:inputType="numberDecimal"
            android:textColorHint="@color/branco" />
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="82dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:text="OU"
                android:textColor="@color/branco" />
        </LinearLayout>
        <Button
            android:id="@+id/date_dia"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/ic_calendarioicone" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pesquisar_horarios"
        android:text="Pesquisar Horarios"
        android:backgroundTint="@color/profilePrimaryDark"
        android:textColor="@color/branco"
        android:background="@drawable/shapelogin"
        android:layout_marginLeft="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />



</LinearLayout>