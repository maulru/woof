<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="77dp"
            android:adjustViewBounds="false"
            android:baselineAligned="false"
            android:cropToPadding="false"
            android:src="@drawable/doguinho" />

        <TextView
            android:id="@+id/textClinicaNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Nome da Clinica" />

        <EditText
            android:id="@+id/textCadastroNome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp" />


        <TextView
            android:id="@+id/textTelefne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Telefone" />

        <EditText
            android:id="@+id/textCadastroTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLength="9"
            android:ems="10"
            android:inputType="phone"
            android:padding="5dp"
            android:background="@drawable/edittextshape"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="300dp"/>





        <TextView
            android:id="@+id/textCNPJ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="CNPJ"
            android:ems="10"
            android:inputType="number"/>


        <EditText
            android:id="@+id/textCadastroCNPJ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:padding="5dp"
            android:background="@drawable/edittextshape"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="300dp"/>

        <TextView
            android:id="@+id/textCEP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="CEP" />

        <EditText
            android:id="@+id/textCadastroCEP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:padding="5dp"
            android:background="@drawable/edittextshape"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="300dp" />

        <TextView
            android:id="@+id/textEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="EndereÃ§o" />

        <EditText
            android:id="@+id/textCadastroEndereco"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp" />


        <TextView
            android:id="@+id/textNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Numero" />

        <EditText
            android:id="@+id/textCadastroNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:inputType="number"
            android:padding="5dp"

            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="300dp" />




        <TextView
            android:id="@+id/emailView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Email" />


        <EditText
            android:id="@+id/textCadastroEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:background="@drawable/edittextshape"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="300dp"
            />

        <Button
            android:id="@+id/botaoCadastroAvancar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:text="Cadastrar"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>
</ScrollView>